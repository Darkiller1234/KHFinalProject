<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace: 해당 mapper파일의 고유한 별칭 -->

<mapper namespace="replyMapper">
	<resultMap type="Reply" id="replyResult">
		<result column="REPLY_NO" property="replyNo" />
		<result column="BOARD_NO" property="boardNo" />
		<result column="REPLY_PNO" property="replyPNo" />
		<result column="MEMBER_NO" property="memberNo" />
		<result column="REPLY_CONTENT" property="replyContent" />
		<result column="STATUS" property="status" />
		<result column="REPLY_GROUP" property="replyGroup" />
		<result column="REPLY_DEPTH" property="replyDepth" />
		<result column="REPLY_ORDER" property="replyOrder" />
		<result column="CHILD_COUNT" property="childCount" />
	</resultMap>

  <!-- 댓글 총 갯수 조회 -->
  <select id="selectListCount" resultType="int">
   	SELECT COUNT(*)
   	  FROM REPLY
   	<where>
  	 	STATUS = 'Y'
  	 	AND BOARD_NO = #{cno}
  	 </where> 
  </select>
  
  
  <!-- 댓글 목록 조회 -->
  <select id="selectList" parameterType="Reply"  resultMap="replyResult">
  	SELECT *
  	  FROM REPLY R
  	 <where>
  	 	STATUS = 'Y'
  	 	AND BOARD_NO = #{boardNo}
  	 </where> 
  	 ORDER BY REPLY_NO DESC
  </select>
  

	 <!-- 댓글쓰기 -->
	  <insert id="insertReply" parameterType="Reply">
	  	INSERT
	  		INTO REPLY
	  		VALUES
	  		(
	  			REPLY_SEQ.NEXTVAL,
	  			#{boardNo},
	  			#{replyPNo},
	  			#{memberNo},
	  			#{replyContent},
	  			'Y',
	  			#{replyGroup},
	  			#{replyDepth},
	  			#{replyOrder},
	  			#{childCount}
	  		)
	  </insert>
	  
		<!-- 댓글 삭제 -->
	  <update id="deleteReply">
	  	UPDATE REPLY
	  	SET
	  	STATUS = 'N'
		 WHERE REPLY_NO = #{replyNo}
	  </update>

	<!-- 댓글 수정 -->
	<update id="updateReply" parameterType="Reply">
		UPDATE Reply
		SET
		REPLY_CONTENT = #{replyContent}
		WHERE
		REPLY_NO = #{replyNo}
	</update>
</mapper>



